<div class="container">
  <h1 class="text-center mt-5"><%= @employee.name %></h1>

  <%= simple_form_for [@employee, @skillset] do |f| %>
    <%= f.input :expertise, collection: Skillset::SKILLS, label: false, input_html: { class: 'form-control mb-2 mt-5' } %>
    <%= f.button :submit, "Add Skillset", class: "btn btn-success" %>
  <% end %>
  <ul class="mt-5">
    <% @employee.skillsets.each do |skill| %>
      <li class="employee-expertise"><%= skill.expertise %></li>
    <% end %>
  </ul>
</div>
